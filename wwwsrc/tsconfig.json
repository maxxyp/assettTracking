{
  "compilerOptions": {
    "typeRoots" : ["./typings/**/*"],
    "target": "es5",
    "module": "amd",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noLib": false,
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
